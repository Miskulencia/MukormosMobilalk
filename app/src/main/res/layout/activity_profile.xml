<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@drawable/mukormosfoodal">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:layout_gravity="top"
        app:menu="@menu/main_menu"
        app:title="Profil"
        app:titleTextColor="@color/gold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/pink"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon" />

        <Button
            android:id="@+id/profile_camera_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profilkép készítése"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textStyle="bold"
            android:textColor="@color/gold"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gold"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Felhasználónév:"
            android:textStyle="bold"
            android:textColor="@color/gold"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>
        <Button
            android:id="@+id/profile_update_username_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Felhasználónév frissítése"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foglalások:"
            android:textStyle="bold"
            android:textColor="@color/gold"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">
            <Button
                android:id="@+id/profile_sort_bookings_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Időrendben"/>
            <Button
                android:id="@+id/profile_latest_bookings_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legutóbbi 3"/>
            <Button
                android:id="@+id/profile_future_bookings_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jövőbeliak"/>
        </LinearLayout>

        <TextView
            android:id="@+id/profile_bookings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gold"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/profile_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hely: "
            android:textColor="@color/gold"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</LinearLayout>
